<% layout('layouts/boilerplate') -%>
    <div class="container">
        <div class="row">
            <div class="col-12 pt-3">
                <h1 class="text-center">New Campground</h1>
            </div>
            <div class="col-md-6 offset-md-3">
                <form action="/campgrounds" method="POST" class="my-3 needs-validation" novalidate enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Title</label><br>
                        <input type="text" class="form-control" id="title" name="title" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid Title
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label><br>
                        <input type="text" class="form-control" id="location" name="location" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid Location
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="images">Upload Images</label><br>
                        <div class="input-group mb-3">
                            <div class="custom-file">
                              <input type="file" class="custom-file-input btn" id="images" name="images" multiple>
                              <label class="custom-file-label" for="images">Choose file</label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="price">Price</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                              <div class="input-group-text">$</div>
                            </div>
                            <input type="text" class="form-control" id="price" name="price" required>
                            <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid Price
                        </div>
                          </div>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label><br>
                        <textarea class="form-control" id="description" name="description" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid Description
                        </div>
                    </div>
                    <br>
                    <button class="btn btn-success btn-block">Add Campground</button>
                </form><br>
            </div>
        </div>
    
    </div>